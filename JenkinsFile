pipeline {
    agent {
        docker {
            image 'node:alpine'
            label 'node'
            args '-p 127.0.0.1:3000:3000/tcp'
        }
    }
    stages {
        stage("Prepare") {
            steps {
                sh 'yarn install'
            }
        }
        stage('Test') {
            steps {
                sh 'yarn test'
            }
        }
        stage("Build") {
            steps {
                sh 'yarn build'
            }
        }
        stage('Start') {
            steps {
                sh 'yarn start'
            }
        }
    }
}