pipeline {
    agent {
        docker {
            image 'node:alpine'
            label 'nodejs'
            args '-p 127.0.0.1:3000:3000/tcp'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'yarn install'
                sh 'yarn start'
            }
        }
        stage('Test') {
            steps {
                sh 'yarn test'
            }
        }
    }
}